<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment_reading"
        class="net.nightwhistler.pageturner.activity.ReadingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="400dp"
        android:layout_marginTop="@dimen/abs__action_bar_default_height"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_dropdown_panel_reader"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>